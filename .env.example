# ===========================================
# Miladak V2 - Environment Variables
# ===========================================

# Database
# للتطوير المحلي: استخدم SQLite
DATABASE_URL="./database.sqlite"

# للإنتاج: استخدم Vercel Postgres
# ستحصل على هذه القيم من Vercel Dashboard > Storage > Postgres
# POSTGRES_URL="postgres://..."
# POSTGRES_PRISMA_URL="postgres://..."
# POSTGRES_URL_NON_POOLING="postgres://..."
# POSTGRES_USER="default"
# POSTGRES_HOST="..."
# POSTGRES_PASSWORD="..."
# POSTGRES_DATABASE="verceldb"

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="ميلادك"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# SEO Configuration
# رابط الموقع الأساسي (للـ sitemap و robots.txt)
NEXT_PUBLIC_SITE_URL="https://miladak.com"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_GTAG_ID=""

# AdSense
# احصل على Client ID من: https://www.google.com/adsense
NEXT_PUBLIC_ADSENSE_CLIENT="ca-pub-XXXXXXXXXXXXXXXX"

# AdSense Publisher ID for ads.txt (same as client ID without 'ca-' prefix)
# مثال: إذا كان Client ID هو ca-pub-1234567890123456
# فإن Publisher ID هو pub-1234567890123456
ADSENSE_PUBLISHER_ID="pub-XXXXXXXXXXXXXXXX"

# Ad Slots - أنشئ وحدات إعلانية من لوحة AdSense
NEXT_PUBLIC_AD_SLOT_HEADER=""
NEXT_PUBLIC_AD_SLOT_SIDEBAR=""
NEXT_PUBLIC_AD_SLOT_IN_CONTENT=""
NEXT_PUBLIC_AD_SLOT_IN_FEED=""
NEXT_PUBLIC_AD_SLOT_FOOTER=""
NEXT_PUBLIC_AD_SLOT_SQUARE=""

# Security
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# AI Providers
# Gemini (مجاني - موصى به للعربية) - احصل على المفتاح من: https://makersuite.google.com/app/apikey
# يدعم مفاتيح متعددة للتبديل التلقائي عند انتهاء الحصة (20 طلب/يوم للمجاني)
GEMINI_API_KEY="your-gemini-api-key"
# مفاتيح إضافية (اختياري) - أنشئ حسابات Google مختلفة للحصول على مفاتيح إضافية
# GEMINI_API_KEY_2="your-second-gemini-key"
# GEMINI_API_KEY_3="your-third-gemini-key"
# GEMINI_API_KEY_4="your-fourth-gemini-key"
# ... يمكنك إضافة حتى GEMINI_API_KEY_10

# Groq (مجاني وسريع جداً - يُستخدم كـ fallback لـ Gemini) - احصل على المفتاح من: https://console.groq.com/keys
GROQ_API_KEY=""

# Cohere (مجاني) - احصل على المفتاح من: https://dashboard.cohere.ai/api-keys
COHERE_API_KEY=""

# HuggingFace (مجاني) - احصل على المفتاح من: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=""

# Pexels (للصور المجانية) - احصل على المفتاح من: https://www.pexels.com/api/
NEXT_PUBLIC_PEXELS_API_KEY=""
PEXELS_API_KEY=""
